<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h2><%= "New Restaurant🍴" %></h2>

      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
        <%= f.submit class: 'btn btn-primary'  %>
      <% end %>
      <br>
      <%= link_to "↩︎Back to Restaurants", restaurants_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
