<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>New review</h1>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.input :content%>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
        <br>
        <%= link_to "See all restaurants", restaurants_path,  class: 'btn btn-primary' %>
    </div>
  </div>
</div>
